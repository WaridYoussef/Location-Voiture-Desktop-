<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">loc</property>
    <property name="hibernate.connection.password">loc</property>
    <mapping class="app.gestion.Location.models.Client"/>
    <mapping class="app.gestion.Location.models.Location"/>
    <mapping class="app.gestion.Location.models.Fabricant"/>
    <mapping class="app.gestion.Location.models.Compte"/>
    <mapping class="app.gestion.Location.models.Emprunt"/>
    <mapping class="app.gestion.Location.models.Exemplaire"/>
    <mapping class="app.gestion.Location.models.Locataire"/>
    <mapping class="app.gestion.Location.models.Voiture"/>
  </session-factory>
</hibernate-configuration>
